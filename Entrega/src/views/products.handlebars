<div class="container">
    <diw class="row">
        <div class="col-12">
            <h1>Productos</h1>
        </div>
        {{#if Arr}}
            {{#each Arr}}
                {{#if this._id}}
                    <div class="col-3">
                        <div class="card mt-5">
                            <img src="{{image}}" class="card-img-top" alt="{{product_name}}">
                            <div class="card-body">
                                <h5 class="card-title prod-name">{{product_name}}</h5>
                                <p class="card-text prod-code">code: {{code}}</p>
                                <p class="card-text prod-description">{{description}}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <span class="prod-price">
                                        price: {{price}}€
                                    </span>
                                    <span class="prod-offer">
                                        offer: {{offer}}€
                                    </span>
                                </li>
                                <li class="list-group-item">stock: {{stock}} unds.</li>
                            </ul>
                            {{!-- {{ this._id }} --}}
                            <a onclick="addCart('{{ this._id }}')" type="submit" class="btn-addCart btn btn-primary">Añadir a carrito</a>
                        </div>
                    </div>
                {{/if}}
           {{/each}}
        {{else}}
            <h1>no hay productos</h1> 
        {{/if}}   
    </diw>
</div>
<script src="/js/product.js"></script>
<script src="/js/cart.js"></script>