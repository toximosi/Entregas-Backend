<div class="container">
    <diw class="row">
        <div class="col-12">
            <h1>Productos</h1>
        </div>
        {{#if Arr}}
            {{#each Arr}}
                {{#if this._id}}
                    <div class="col-4">
                        <div class="card">
                            <img src="{{image}}" class="card-img-top" alt="{{product_name}}">
                            <div class="card-body">
                                <h5 class="card-title">{{product_name}}</h5>
                                <p class="card-text">{{description}}</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">precio:<br> {{price}}</li>
                                <li class="list-group-item">code:<br> {{code}}</li>
                                <li class="list-group-item">stock:<br> {{quantity}}</li>
                            </ul>
                            {{!-- {{ this._id }} --}}
                            <a onclick="addCart('{{ this._id }}')" type="submit" class="btn-addCart btn btn-primary">AÃ±adir a carrito</a>
                        </div>
                    </div>
                {{/if}}
           {{/each}}
        {{else}}
            <h1>no hay productos</h1> 
        {{/if}}   
    </diw>
</div>
<script src="/js/product.js"></script>
<script src="/js/cart.js"></script>