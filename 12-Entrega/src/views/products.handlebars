<header>
    <div>üññ Bienvenido</div>
    <div>üë§ {{user}}</div>
    <form id="logout"><button class="btn btn-primary" type="submit">‚úï</button></form>
</header>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-4">
            <div class="content-fixed">
                <div class="formulario-fixed">
                    <h1> A√±adir producto</h1>
                    <form id="productForm">
                        <div class="row">
                            <div class="mb-3 col-12">
                                <label for="name" class="form-label">Nombre:</label>
                                <input id="name" name="name" type="text" class="form-control"  placeholder="Escribe tu nombre" >
                            </div>
                            <div class="mb-3 col-6">
                                <label for="id" class="form-label">Id:</label>
                                <input id="id" name="id" type="number" class="form-control"  placeholder="000000" >
                            </div>
                            <div class="mb-3 col-6">
                                <label for="code" class="form-label">Code:</label>
                                <input id="code" name="text" type="text" class="form-control"  placeholder="CO-000000" >
                            </div>
                            <div class="mb-3 col-6">
                                <label for="price" class="form-label">Precio <i>(‚Ç¨)</i>:</label>
                                <input id="price" name="price" type="number" step=.01 class="form-control"  placeholder="0,00" >
                            </div>
                            <div class="mb-3 col-6 disable">
                                <label for="stock" class="form-label">Stock <sup style="color:red">(disabled)</sup>:</label>
                                <input id="stock" name="stock" type="number" class="form-control"  placeholder="00" aria-label="Disabled input" disabled="">
                            </div>
                                <div class="mb-3 col-12 disable">
                                <label for="description" class="form-label">Descipci√≥n:<sup style="color:red">(disabled)</sup>:</label>
                                <textarea id="description" name="description" type="text" class="form-control"  placeholder="Escribe tus apellidos" rows="3"  aria-label="Disabled input"  disabled=""></textarea>
                            </div>
                            <div class="mb-3 col-12 disable">
                                <label for="formFile" class="form-label">Imagen <sup style="color:red">(disabled)</sup>:</label>
                                <input class="form-control" type="file" id="formFile" aria-label="Disabled input" disabled="">
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary">Acceder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>        
        <div class="col-12 col-md-8">
            {{#if Arr}}
                <h1>üëù Listado de productos</h1>
                    <table class="table product-table">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">id</th>
                                <th scope="col">Creaci√≥n</th>
                                <th scope="col">Codigo</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Descripci√≥n</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Arr}}
                            <tr>
                                <td scope="col">
                                    <div style="width:50px ; height:50px; overflow:hidden">
                                        <img src="{{this.image}}" style="width:fit-content; height:auto">
                                    </div>
                                </td>
                                <td scope="col">{{this.id}}</td>
                                <td scope="col">{{this.timestamp}}</td>
                                <td scope="col">{{this.code}}</td>
                                <td scope="col">{{this.name}}</td>
                                <td scope="col">{{this.description}}</td>
                                <td scope="col">{{this.price}}</td>
                                <td scope="col">{{this.stock}}</td>                            
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <h1>no hay productos</h1>    
            {{/if}}
        </div>
    </div>
</div>
<!-- scripts -->
<script src="js/products.js"></script> 