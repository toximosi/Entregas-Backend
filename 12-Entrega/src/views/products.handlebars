<div class="container">
    <div class="row justify-content-xs-center">
        <div class="col-xs-auto">
            {{#if Arr}}
                <h1>table of products</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">id</th>
                                <th scope="col">Creation</th>
                                <th scope="col">Code</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Price</th>
                                <th scope="col">Stock</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each Arr}}
                            <tr>
                                <td scope="col">
                                    <div style="width:50px ; height:50px; overflow:hidden">
                                        <img src="{{this.image}}" style="width:fit-content; height:auto">
                                    </div>
                                </td>
                                <td scope="col">{{this.id}}</td>
                                <td scope="col">{{this.timestamp}}</td>
                                <td scope="col">{{this.code}}</td>
                                <td scope="col">{{this.name}}</td>
                                <td scope="col">{{this.description}}</td>
                                <td scope="col">{{this.price}}</td>
                                <td scope="col">{{this.stock}}</td>                            
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{else}}
                <h1>no hay productos</h1>    
            {{/if}}
        </div>
    </div>
</div>